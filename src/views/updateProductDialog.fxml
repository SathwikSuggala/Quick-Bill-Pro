<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.UpdateProductDialogController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Update Product" style="-fx-font-size: 18px; -fx-font-weight: bold;" 
           GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="nameField" promptText="Enter product name" 
               GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="descriptionField" promptText="Enter product description" 
               GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="priceField" promptText="Enter price" 
               GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Quantity:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="quantityField" promptText="Enter quantity" 
               GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <HBox spacing="10" alignment="CENTER_RIGHT" 
          GridPane.columnIndex="1" GridPane.rowIndex="5">
        <Button text="Cancel" onAction="#onCancelClicked" />
        <Button text="Update" onAction="#onUpdateClicked" 
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
    </HBox>
</GridPane> 